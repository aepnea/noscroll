.block
  display block
.cardsInt
  margin 0 auto
  max-width 1150px
  ul
    list-style-type none
    margin 0
    padding 0
    width 100%
    li
      //height 250px
      padding 0
      text-align center
      &:nth-child(1)
        .card
          border-left 1px dotted #989898
      .card
        //border 5px solid #a51fc1
        //border 1px solid #989898
        //border-left 1px dotted #989898
        border-right 1px dotted #989898
        display block
        height 100%
        //margin-top 1rem
        min-height 100%
        padding 5px 10px
        transition .75s
        width 100%
        .svg
          background white
          border 4px solid white
          border-radius 50%
          height 100px
          margin 0 auto
          padding 10px
          transform translateY(50px)
          transition .75s
          width 100px
        h3
          color #999999
          font-family 'geometos'
          font-size 18px
          font-weight 600
          margin 0
          text-transform uppercase
          transform translateY(50px)
          transition .75s
          -webkit-font-smoothing initial
        p
          //color #4d4d4d
          color white
          //display none
          font-size 13px
          margin 10px 0 0 0
          opacity 0
          text-align center
          transition .75s
          transform translateY(-30px)
          visibility hidden
        &:hover
          //background #a51fc1
          background #a51fc1
          //border 4px solid #a51fc1
          .svg
            border 4px solid #a51fc1
            transform translateY(-50px)
          h3
            color white
            text-shadow 2px 2px 4px rgba(black, .3)
            transform translateY(-30px)
            -webkit-font-smoothing antialiased
          p
            //display block
            opacity 1
            visibility visible
